<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/concrete</item> <!-- Status bar color -->

        <item name="colorPrimary">@color/cyanDark</item>
        <item name="colorPrimaryVariant">@color/cyan</item>
        <item name="colorSecondary">@color/cyanDark</item>

        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/concreteDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurfacePositive">@color/cyanLight</item>
        <item name="colorOnSurfacePositive">@color/cyan</item>
        <item name="colorSurfaceWarning">@color/mikadoYellowLight</item>
        <item name="colorOnSurfaceWarning">@color/mikadoYellow</item>
        <item name="colorSurfaceNegative">@color/cherryLight</item>
        <item name="colorOnSurfaceNegative">@color/cherry</item>
        <item name="colorSurfaceNeutral">@color/concrete</item>
        <item name="colorOnSurfaceNeutral">@android:color/white</item>

        <item name="colorControlNormal">?colorPrimary</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="radioButtonStyle">@style/Components.RadioButton</item>
        <item name="checkboxStyle">@style/Components.CheckBox</item>
        <item name="switchStyle">@style/Components.Switch</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarButtonStyle</item>
        <item name="materialAlertDialogTheme">@style/DialogStyle</item>
        <item name="materialButtonStyle">@style/Components.Button</item>
        <item name="textInputStyle">@style/Components.TextInputLayout</item>
    </style>

</resources>