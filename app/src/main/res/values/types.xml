<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Components.TextView"/>

    <style name="Components.TextView.Heading1">
        <item name="android:textAppearance">@style/TextAppearance.Heading1</item>
        <item name="android:lineSpacingMultiplier">1.02</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing_xlarge</item>
    </style>

    <style name="Components.TextView.Heading2">
        <item name="android:textAppearance">@style/TextAppearance.Heading2</item>
        <item name="android:lineSpacingMultiplier">1.14</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing_large</item>
    </style>

    <style name="Components.TextView.Heading3">
        <item name="android:textAppearance">@style/TextAppearance.Heading3</item>
        <item name="android:lineSpacingMultiplier">1.14</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing</item>
    </style>

    <style name="Components.TextView.Large">
        <item name="android:textAppearance">@style/TextAppearance.Large</item>
        <item name="android:lineSpacingMultiplier">1.19</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing_large</item>
    </style>

    <style name="Components.TextView.Base">
        <item name="android:textAppearance">@style/TextAppearance.Base</item>
        <item name="android:lineSpacingMultiplier">1.28</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing</item>
    </style>

    <style name="Components.TextView.Base.Bold">
        <item name="android:textAppearance">@style/TextAppearance.Base.Bold</item>
    </style>

    <style name="Components.TextView.Small">
        <item name="android:textAppearance">@style/TextAppearance.Small</item>
        <item name="android:lineSpacingMultiplier">1.22</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing</item>
    </style>

    <style name="Components.TextView.Small.Bold">
        <item name="android:textAppearance">@style/TextAppearance.Small.Bold</item>
    </style>

    <style name="Components.TextView.Micro">
        <item name="android:textAppearance">@style/TextAppearance.Micro</item>
        <item name="android:lineSpacingMultiplier">1.28</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing</item>
    </style>

    <style name="Components.TextView.Micro.Bold">
        <item name="android:textAppearance">@style/TextAppearance.Micro.Bold</item>
    </style>

    <style name="Components.TextView.Nano">
        <item name="android:textAppearance">@style/TextAppearance.Nano</item>
        <item name="android:lineSpacingMultiplier">1.28</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing_small</item>
    </style>

    <style name="Components.TextView.Uppercase">
        <item name="android:textAppearance">@style/TextAppearance.Uppercase</item>
        <item name="android:lineSpacingMultiplier">1.14</item>
        <item name="android:layout_marginBottom">@dimen/component_spacing_small</item>
    </style>

    <style name="Components.TextView.InfoBanner">
        <item name="android:padding">@dimen/component_spacing</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/component_spacing</item>
        <item name="android:drawableLeft">@drawable/ic_info</item>
        <item name="android:background">@drawable/rounded_corner_background</item>
        <item name="android:textColor">?colorOnSurfaceNeutral</item>
    </style>

    <style name="Components.TextView.InfoBanner.Positive">
        <item name="android:drawableLeft">@drawable/ic_info_positive</item>
        <item name="android:backgroundTint">?colorSurfacePositive</item>
        <item name="android:textColor">?colorOnSurfacePositive</item>
    </style>

    <style name="Components.TextView.InfoBanner.Warning">
        <item name="android:drawableLeft">@drawable/ic_info_warning</item>
        <item name="android:backgroundTint">?colorSurfaceWarning</item>
        <item name="android:textColor">?colorOnSurfaceWarning</item>
    </style>

    <style name="Components.TextView.InfoBanner.Negative">
        <item name="android:drawableLeft">@drawable/ic_info_negative</item>
        <item name="android:backgroundTint">?colorSurfaceNegative</item>
        <item name="android:textColor">?colorOnSurfaceNegative</item>
    </style>

</resources>